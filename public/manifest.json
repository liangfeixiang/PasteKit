{
  "manifest_version": 3,
  "name": "PasteKit Lab",
  "version": "1.0.1",
  "description": "PasteKit Lab turns pasted content into actionable data: JSON formatting, encryption, timestamps, DNS/IP lookup, mock data, and network debugging for developers.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "PasteKit Lab"
  },
  "options_page": "options.html",
  "icons": {
    "16": "pastemagic_16.png",
    "32": "pastemagic_32.png",
    "64": "pastemagic_64.png",
    "128": "pastemagic_128.png"
  },
  "permissions": [
    "commands",
    "notifications",
    "scripting"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Open PasteMagic popup"
    }
  },
  "host_permissions": [
    "https://free.freeipapi.com/",
    "https://dns.alidns.com/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  }
}